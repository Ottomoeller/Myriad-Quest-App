<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="questapp.myapp.SpecialDeliveryActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TextView
            android:text="@string/quest2Title"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/quest2QuestGiver"
            android:textStyle="normal"
            android:textSize="8pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/quest2Reward"
            android:textStyle="bold"
            android:textSize="9pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_weight="1">
                <TextView android:id="@+id/quest2"
                    android:text="@string/quest1Details"
                    android:textStyle="normal"
                    android:textSize="8pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
